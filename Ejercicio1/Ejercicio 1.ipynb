    "def valida_palindromo(texto):\n",
    "    texto = texto.lower().replace(\" \", \"\")\n",
    "    if texto == texto[::-1]: print(f\"{texto} es un palíndromo\")\n",
    "    else: print(f\"{texto} no es un palíndromo\")\n",
    "    \n",
    "valida_palindromo('ANA')"
   ]
